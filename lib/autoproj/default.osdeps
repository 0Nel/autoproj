# The following definitions are needed to bootstrap autoproj
none: ignore

ruby18:
    debian,ubuntu:
        - ruby1.8-dev
        - ruby1.8
        - rubygems1.8
        - ri1.8
        - libopenssl-ruby1.8
        - rake
    gentoo:
        - dev-lang/ruby:1.8
        - rake
    fedora:
      "15,16":
        - ruby
        - rubygems
    darwin:
        - ruby
        - rb-rake
    default: nonexistent
    
ruby19:
    debian:
        - ruby1.9.1
        - ruby1.9.1-dev
        - rubygems1.9.1
        - rake
        - rubygems-integration

    ubuntu:
        - ruby1.9.1
        - ruby1.9.1-dev
        - rubygems1.9.1
        - ri1.9.1
        - libopenssl-ruby1.9.1
        - rake
    gentoo:
        - dev-lang/ruby:1.9
        - rake
    arch,manjarolinux:
        - ruby
    fedora:
      "17":
      - ruby
      - rubygems
    darwin:
        - ruby19
        - rake
    default: nonexistent

ruby20: ignore
ruby21: ignore

build-essential:
  debian,ubuntu: build-essential
  gentoo: ignore
  arch,manjarolinux: base-dev
  fedora: ignore
  darwin: ignore

autobuild: gem
autoproj: gem

# The following definitions are for the VCS and build systems
git:
  debian:
    lenny: git
    default: git-core
  ubuntu: git-core
  gentoo: dev-vcs/git
  arch,manjarolinux: git
  fedora: git
  darwin: git-core

hg:
  debian,ubuntu: mercurial
  gentoo: dev-vcs/mercurial
  arch,manjarolinux: mercurial
  fedora: mercurial
  darwin: mercurial

svn:
  debian,ubuntu: subversion
  gentoo: dev-util/subversion
  arch,manjarolinux: subversion
  fedora: subversion
  darwin: subversion

cmake:
  debian,ubuntu: cmake
  gentoo: dev-util/cmake
  arch,manjarolinux: cmake
  fedora: cmake
  darwin: cmake

autotools:
  debian,ubuntu:
  - "automake1.9"
  - autoconf
  gentoo:
  - "sys-devel/automake:1.9"
  - sys-devel/autoconf
  arch,manjarolinux: 
  - automake 
  - autoconf
  fedora:
  - automake
  - autoconf
  darwin:
  - automake
  - autoconf

lsb_release:
  debian,ubuntu: lsb-release
  gentoo: sys-apps/lsb-release
  arch,manjarolinux: lsb-release
  fedora: redhat-lsb
  darwin: ignore
    
archive:
  debian,ubuntu:
  - tar
  - unzip
  gentoo:
  - app-arch/tar
  - app-arch/unzip
  arch,manjarolinux:
  - tar
  - unzip
  fedora:
  - tar
  - unzip
  darwin:
  - gnutar
  - unzip

cvs:
  debian,ubuntu: cvs
  fedora: cvs
  darwin: cvs
  arch,manjarolinux: cvs

pip:
  debian,ubuntu: python-pip
  arch,manjarolinux: python2-pip

